
@{
    ViewBag.Title = "DangNhapNB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .hr-sect {
        display: flex;
        flex-basis: 100%;
        align-items: center;
        color: black;
        margin: 8px 0px;
    }

        .hr-sect::before,
        .hr-sect::after {
            content: "";
            flex-grow: 1;
            background: rgba(0, 0, 0, 0.35);
            height: 1px;
            font-size: 0px;
            line-height: 0px;
            margin: 0px 8px;
        }
</style>
<div class="container">
    <div class="modal-body modal-body-sub_agile">
        <div class="main-mailposi">
            <span class="fa fa-envelope-o" aria-hidden="true"></span>
        </div>
        <div class="modal_body_left modal_body_left1">
            <br />
            <form action="#" method="post">
                <div class="col-md-12" style="background-color: #f1f1f1">
                    <div class="col-md-6">
                        <br />
                        <h3 style="color: orangered">Bán hàng chuyên nghiệp</h3>
                        <br />
                        <h4>Quản lý shop của bạn một cách hiệu quả hơn trên GS Shop với GS Shop - Kênh Người bán</h4>
                        <br />
                        <img src="~/Content/Layout/images/nguoiban.png" style="float: left; width:100%; height: 220px" />
                    </div>
                    <br />
                    <div class="col-md-6">
                        <center>
                            <div class="row">
                                <h3>GS Shop - Kênh Người Mua Bán</h3>
                            </div>
                        </center>
                        <br />
                        <div class="styled-input agile-styled-input-top">
                            <input type="text" placeholder="Email" name="taikhoan">
                            <b style="font-size: 12px; color: red;">@ViewBag.TaiKhoan</b>
                        </div>
                        <div class="styled-input">
                            <input type="password" placeholder="Mật khẩu" name="matkhau">
                            <b style="font-size: 12px; color: red;">@ViewBag.MatKhau</b>
                            <br />
                        </div>
                        <center>
                            <div class="row">
                                <input type="checkbox" style="float: left"><span style="margin-right: 65%; font-size: 13px">Nhớ tôi</span>
                                <span style="float: right">
                                    <a href="#" style="font-size: 13px">
                                        Quên Mật Khẩu?
                                    </a>
                                </span>
                            </div>
                        </center>
                        <br />
                        <center><input type="submit" onclick="xuly()" value="ĐĂNG NHẬP"></center>
                        @Html.Raw(ViewBag.TKMK)
                        <br />
                    </div>
                    <br />
                </div>
            </form>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

